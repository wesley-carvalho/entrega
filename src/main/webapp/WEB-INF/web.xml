<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProdutoServlet</servlet-name>
        <servlet-class>br.senac.dsw.servlet.ProdutoServlet</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>PrincipalServlet</servlet-name>
        <servlet-class>br.senac.dsw.servlet.PrincipalServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>ProdutoServlet</servlet-name>
        <url-pattern>/cadastrar_produtos</url-pattern>
        <url-pattern>/listar_produtos</url-pattern>
        <url-pattern>/produto_cadastrar</url-pattern>
        <url-pattern>/produto_atualizar</url-pattern>
        <url-pattern>/produto_alterar</url-pattern>
        <url-pattern>/produto_exibir</url-pattern>
        <url-pattern>/produto_excluir</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>PrincipalServlet</servlet-name>
        <url-pattern>/error</url-pattern>
        <url-pattern>/success</url-pattern>        
        <url-pattern>/index.html</url-pattern>
        <url-pattern>/menu_principal</url-pattern>        
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
